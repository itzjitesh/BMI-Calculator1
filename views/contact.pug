
extends base.pug

block scripts
    script(src='/views/index.js')

block style 
    style 
        include ../static/style.css 
        include ../views/styleContact.css
        
block content 
    div.container 
        h1  Contact Us 
        form(action="/contact", method="post", class="myform") 
            input(type="text", class="myname" name="name" placeholder="Enter Your Name")
            input(type="text", class="myname" name="Email" placeholder="Enter Your Email ID")
            input(type="text", class="myname" name="Phone" placeholder="Enter Your Phone Number")
            input(type="text", class="myname" name="Address" placeholder="Enter Your Address")
            input(type="text", class="myname" name="Concern" placeholder="Enter Your Concern")
            button(class="btn")
                | Submit Now 